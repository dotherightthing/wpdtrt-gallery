    },
    "minimum-stability": "stable",
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:dotherightthing/wpdtrt-debug.git"
        },
        {
            "type": "vcs",
            "url":  "git@github.com:dotherightthing/wpdtrt-plugin.git"
        }
    ],
    "config": {
        "vendor-dir": "vendor"
    },
	"require-dev": {
		"phpdocumentor/phpdocumentor": "2.*",
		"phpunit/phpunit": "^5.7",
		"psy/psysh": "~0.6",
		"wp-cli/wp-cli": "~0.22"
	}
