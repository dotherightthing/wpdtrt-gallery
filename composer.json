{
    "name": "dotherightthing/wpdtrt-gallery",
    "description": "Gallery viewer which supports images, panoramas, maps, SoundCloud and Vimeo.",
    "type": "library",
    "keywords": ["gallery", "video", "audio", "map"],
    "license": "ISC",
    "authors": [
        {
            "name": "Dan Smith",
            "email": "dev@dotherightthing.co.nz",
            "homepage": "https://github.com/dotherightthing/wpdtrt-gallery",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "support@dotherightthing.co.nz",
        "issues": "https://github.com/dotherightthing/wpdtrt-gallery/issues"
    },
    "require": {
        "dotherightthing/wpdtrt-plugin-boilerplate": "^1.5.0"
    },
    "require-dev": {
        "phpdocumentor/phpdocumentor": "2.9.0",
        "phpunit/phpunit": "^5.7",
        "psy/psysh" : "~0.6",
        "wp-cli/wp-cli" : "~0.22",
        "wp-coding-standards/wpcs": "^0.14.1",
        "DealerDirect/phpcodesniffer-composer-installer": "^0.4.4",
        "dotherightthing/wpdtrt-contentsections": "^0.2.1",
        "dotherightthing/wpdtrt-exif": "^0.2.1"
    },
    "extras": {
        "require-wp": [
            {
                "name": "DTRT Content Sections",
                "host": "github",
                "repository": "dotherightthing/wpdtrt-contentsections",
                "file": "wpdtrt-contentsections.php",
                "description": "The gallery viewer is initialised as these are scrolled into view"
            },
            {
                "name": "DTRT EXIF",
                "host": "github",
                "repository": "dotherightthing/wpdtrt-exif",
                "file": "wpdtrt-exif.php",
                "description": "Appends GPS coordinates to the thumbnail link"
            }
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/dotherightthing/wpdtrt-plugin-boilerplate"
        },
        {
            "type": "vcs",
            "url": "https://github.com/dotherightthing/wpdtrt-debug"
        },
        {
            "type": "vcs",
            "url": "https://github.com/dotherightthing/tgm-plugin-activation"
        },
        {
            "type": "vcs",
            "url": "https://github.com/dotherightthing/wpdtrt-contentsections"
        },
        {
            "type": "vcs",
            "url": "https://github.com/dotherightthing/wpdtrt-exif"
        },
        {
            "type": "vcs",
            "url": "https://github.com/prairiewest/PHPconvertDMSToDecimal"
        }
    ],
    "config": {
        "vendor-dir": "vendor"
    }
}
